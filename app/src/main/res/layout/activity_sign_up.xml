<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:id="@+id/parent_layout"
    android:background="@drawable/signup_bg">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ambit_regular"
        android:text="@string/welcome"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:textSize="15sp">

    </TextView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ambit_regular"
        android:text="@string/tech_mark"
        android:layout_marginStart="20dp"
        android:layout_below="@id/textView3"
        android:textColor="@color/white"
        android:textSize="25sp">

    </TextView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ambit_regular"
        android:text="@string/digi_sol"
        android:layout_marginStart="20dp"
        android:layout_below="@id/textView4"
        android:textColor="@color/white"
        android:textSize="17sp">

    </TextView>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo_white"
        android:scaleY="1.5"
        android:transitionName="image"
        android:scaleX="1.5"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_account"
        android:id="@+id/sign_up_head"
        android:textColor="@color/dull_yellow"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_below="@id/textView5"
        android:fontFamily="@font/ambit_bold">

    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        android:layout_below="@id/sign_up_head">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_layout"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:theme="@style/et">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_et"
                android:textColor="@color/white"
                android:fontFamily="@font/ambit_regular"
                android:theme="@style/et"
                android:paddingBottom="17dp"
                android:hint="@string/type_name"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:drawablePadding="10dp"
                android:textColorHint="@color/silver"
                android:drawableStart="@drawable/ic_name"
                android:inputType="textCapWords">

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/phone_layout"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:theme="@style/et"
            android:layout_below="@id/name_layout">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone_et"
                android:textColor="@color/white"
                android:fontFamily="@font/ambit_regular"
                android:theme="@style/et"
                android:paddingBottom="17dp"
                android:hint="@string/type_phone"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:drawablePadding="10dp"
                android:textColorHint="@color/silver"
                android:drawableStart="@drawable/ic_phone"
                android:inputType="phone"
                android:digits="0123456789">

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email_layout"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:theme="@style/et"
            android:layout_below="@id/phone_layout">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email_et"
                android:textColor="@color/white"
                android:fontFamily="@font/ambit_regular"
                android:theme="@style/et"
                android:paddingBottom="17dp"
                android:hint="@string/type_email"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:drawablePadding="10dp"
                android:textColorHint="@color/silver"
                android:drawableStart="@drawable/ic_email_white"
                android:inputType="textEmailAddress">

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password_layout"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:theme="@style/et"
            app:passwordToggleEnabled="true"
            android:layout_below="@id/email_layout">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password_et"
                android:textColor="@color/white"
                android:fontFamily="@font/ambit_regular"
                android:theme="@style/et"
                android:paddingBottom="17dp"
                android:hint="@string/type_pass"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:drawablePadding="10dp"
                android:textColorHint="@color/silver"
                android:drawableStart="@drawable/ic_password"
                android:inputType="textPassword">

            </EditText>

        </com.google.android.material.textfield.TextInputLayout>


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_spinner"
            android:paddingTop="17dp"
            android:paddingBottom="17dp"
            android:layout_marginTop="3dp"
            android:layout_below="@id/password_layout"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="textStart">

        </Spinner>


    </RelativeLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_btn"
        android:background="@drawable/next_btn_bg"
        android:layout_below="@id/layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:fontFamily="@font/ambit_regular">

    </Button>


</RelativeLayout>