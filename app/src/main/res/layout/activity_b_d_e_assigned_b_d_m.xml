<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BDEAssignedBDM.BDEAssignedBDMActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="@string/showing_all_leads"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/head_text"
        app:title="BDM assigned leads"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:visibility="gone"
        android:layout_below="@id/head_text"
        android:padding="4dp"
        android:text="@string/showing_all_leads"
        android:layout_margin="5dp"
        android:id="@+id/head">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/head"
        android:id="@+id/r_view">

    </androidx.recyclerview.widget.RecyclerView>


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:id="@+id/anim"
        android:layout_centerInParent="true"
        app:lottie_fileName="loading_2.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true">

    </com.airbnb.lottie.LottieAnimationView>

    <!--<com.airbnb.lottie.LottieAnimationView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:id="@+id/anim2"
        android:visibility="gone"
        android:layout_centerInParent="true"
        app:lottie_fileName="empty.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true">

    </com.airbnb.lottie.LottieAnimationView>-->

</RelativeLayout>