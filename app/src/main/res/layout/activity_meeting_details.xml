            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:id="@+id/payments_card"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/part_three"
                android:layout_marginStart="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/payment_details"
                        android:layout_marginStart="10dp"
                        android:textStyle="bold"
                        android:id="@+id/payment_details_text"
                        android:textColor="@color/dark_grey"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mode"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/mode_text"
                        android:layout_below="@id/payment_details_text">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mode"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_grey"
                        android:textSize="20sp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/payment_mode"
                        android:layout_below="@id/payment_details_text"
                        android:layout_toEndOf="@id/mode_text">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@id/mode_text"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            app:cardCornerRadius="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@color/extra_light_grey">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/dark_grey">

                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/amount"
                                    android:id="@+id/total_amount"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/dark_grey">

                                </TextView>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@color/extra_light_grey">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/paid"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:textColor="@color/dark_grey">

                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/amount"
                                    android:layout_marginBottom="10dp"
                                    android:id="@+id/paid_amount"
                                    android:layout_gravity="center"
                                    android:textColor="@color/dark_grey">

                                </TextView>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@color/extra_light_grey">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/remaining"
                                    android:textAlignment="center"
                                    android:textSize="15sp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/dark_grey">

                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/amount"
                                    android:layout_marginBottom="10dp"
                                    android:id="@+id/remaining_amount"
                                    android:layout_gravity="center"
                                    android:textColor="@color/dark_grey">

                                </TextView>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nan_text"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:text="@string/nan"
                android:padding="10dp"
                android:gravity="center"
                android:layout_below="@id/payments_card">

            </TextView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>